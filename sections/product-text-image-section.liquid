    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Sub Title"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "info",
      "label": "Add Text"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Add Button"
    },
    {
      "type": "url",

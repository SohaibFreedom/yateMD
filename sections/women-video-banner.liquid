<style>
.women-video_banner{
  position: relative;
  display: inline-block;
  vertical-align: top;
  width: 100%;
}
.women-video_banner-video{
  display: block;
  height: calc(100vh - 142px);
  object-fit: cover;
  object-position: bottom;
  max-width: 100%;
}
.women-video-banner-content{
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 1;
  display: flex;
  align-items: center;
}
.video-banner-list{
  padding: 0;
  margin-bottom: 0;
}
.video-banner-inner-content h2{
  font-size: 60px;
  line-height: 1.2;
  font-weight: 700;
  color: #fff;
  margin-top: 0;
  margin-bottom: 24px;
}
.video-banner-list{
  list-style: none;
}
.video-banner-list li{
  font-size: 18px;
  font-weight: 500;
  line-height: 1.5;
  color: #fff;
  margin-bottom: 8px;
  display: flex;
  align-items: center;
}
.video-banner-list li .videob-banner-icon svg{
  width: 20px;
  height: 20px;
  flex: 0 0 20px;
  margin-right: 12px;
}
.video-banner-inner-content .button{
  background: #fff;
  color: #000;
  margin: 25px 0;
}
.video-banner-inner-content .button:after{
  display: none;
}
.video-banner-inner-content  p{
  font-size: 12px;
  font-weight: 500;
  line-height: 1.3;
  color: #fff;
  margin: 0;
  max-width: 480px;
}
.videob-banner-icon{
  line-height: 1;
}

{% style %}
  .review_star span{
    line-height: 1;
  }
  .review_star span svg{
    margin-left: -2px;
    margin-right: -2px;
  }
  .review_star{
    padding-bottom: 16px;
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .review-slider_section{
    padding: 56px 0;
  }
  .review-slider_section .page-width{
    max-width: 100%;
  }
  .review_heading-text{
    font-size: 40px;
    font-weight: 400;
    line-height: 1.3;
    color: #221f20;
    margin: 0;
  }

  .review_slider-images {
    display: flex;
    gap: 5px;
  }
  .review_slider-images img{
    max-width: 100%;
    display: block;
    height: auto;
  }
  h6.review_content-title {
    font-size: 18px;
    color: #221f20;
    line-height: 1.5;
    margin: 30px 0 16px 0;
  }
  p.review_content-p {
    display: inline-block;
    vertical-align: top;
    margin: 0;
    font-size: 16px;
    font-weight: 500;
    line-height: 1.5;
    color: #221f20;
  }
  .review-slider_section .slick-arrow{
    width: 40px;
    height: 40px;
    border-radius: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #ddc0a6;
    background: #ddc0a6;
     cursor: pointer;
  }
  .review_slider-heading_content{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 50px;
    gap: 30px;
  }
  .review_arrow{
    display: flex;
    gap: 15px;
  }
  .review-slider_section .slick-arrow svg{
    width: 36px;
  }
  span.review_name {
    font-size: 13px;
    font-weight: 600;
    color: #6a6f6a;
    margin-top: 24px;
    line-height: 1.5;
    padding-top: 24px;
    display: inline-block;
    vertical-align: top;
    width: 100%;
    border-top: 1px solid #6a6f6a;
    letter-spacing: 1.5px;
  }
  .review_slider_slide{
    float: left;
    padding: 0 15px;
  }
  .review-slider_section .slick-list.draggable{
     overflow: hidden;
    margin: 0 -15px;
  }
  .review-slider{
    display: inline-block;
    vertical-align: top;
  }
  @media only screen and (max-width: 991px){
    .review_heading-text{
      font-size: 34px;
    }
    .review-slider_section{
      padding: 40px 0;
    }
    .review_slider-heading_content{
      margin-bottom: 40px;
    }
    h6.review_content-title{
      margin-top: 15px;
    }
    span.review_name{
      padding-top: 15px;
      margin-top: 15px;
    }
  }
  @media only screen and (max-width: 767px){
    .review_slider-heading_content{
      margin-bottom: 30px;
      flex-direction: column;
      gap: 20px;
    }
    .review_heading-text{
      font-size: 34px;
      text-align: center;
    }
    .review_star{
      justify-content: center;
      padding-bottom: 10px;
    }
  }
{% endstyle %}
<section class="review-slider_section">

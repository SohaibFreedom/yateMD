{% schema %}
{
  "name": "Review Slider Section",
  "settings": [
    {
      "type": "textarea",
      "id": "heading_text",
      "label": "Heading Text"
    },
    {
      "type": "checkbox",
      "id": "reviw_star",
      "label": "Review Star"
    },
    {
      "type": "checkbox",
      "id": "show_images",
      "label": "Show Images"
    }
  ],
  "blocks":[
    {
      "type": "slide",
      "name": "Slide",
      "settings":[
        {
          "type": "image_picker",
          "id": "first_image",
          "label": "Image 1"
        },
        {
          "type": "image_picker",
          "id": "second_image",
          "label": "Image 2"
        },
         {
          "type": "textarea",
          "id": "content_heading",
          "label": "Title Text"
        },
         {
          "type": "textarea",
          "id": "content_textarea",
          "label": "Content Text"
        },
         {
          "type": "text",
          "id": "review_name",
          "label": "Name Text"
        }
      ]
    }
  ],
  "presets":[
    {
      "name": "Review Slider Section"
    }
  ]
}
{% endschema %}

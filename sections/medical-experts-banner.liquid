  line-height: 1.3;
  color: #212121;
  margin: 0 0 24px;
}
.ME-banner-content-wrapper {
  max-width: 510px;
}
.ME-banner-content-column h2 {
  font-size: 50px;
  line-height: 1.2;
  letter-spacing: 0;
  max-width: 380px;
  margin: 0 0 23px;
}

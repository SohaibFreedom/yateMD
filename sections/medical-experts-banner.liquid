  justify-content: center;
}
.ME-banner-section .page-width {
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
}
.ME-banner-content-column {
  max-width: 50%;
}
.ME-banner-content-column .review-starts svg {
  fill: #8a3a34;
  vertical-align: top;
  max-width: 18px;
}
.ME-banner-content-column .review-starts  span {
  vertical-align: top;
  line-height: 1;
  margin-left: 10px;
}

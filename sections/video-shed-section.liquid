           "label":"Name"
        },
       {
           "type":"text",
           "id":"position",
           "label":"Profession"
        }
     ]
  }
 ],
 "presets":[
        {
           "name":"New Video With Text",
           "category":"custom section"
        }
]
}
{% endschema %}
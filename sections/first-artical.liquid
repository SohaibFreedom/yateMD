<style>
.artical-banner .artical_featured-image img{
	display: block;
	width: auto;
	height: 520px;
	object-fit: cover;
    width: 100%;
}
.artical-banner .blog-articles{
  position: relative;
}
.artical-banner .first-artical{
  position: absolute;
  top: calc(50% - 200px);
  left: 0;
  right: 0;
  bottom: 0;
}
.first-artical .page-width{
  display: flex;
  justify-content: end;
}
.first-artical_box{
  text-decoration: none;
  width: 448px;
  height: 321px;
  background: rgb(243, 241, 233);
  display: block;
  padding: 40px 70px 0 70px;
}
.blog-articles-box{
  position: relative;
}
.first-artical_inner h3{
  margin-top: 0;
  font-size: 32px;
  font-weight: 400;
  line-height: 1.3;
  color: #2D2D2D;
  font-family: Nunito, sans-serif;
  margin-bottom: 26px;
}
.first-artical-tag-date {
    display: flex;
    align-items: center;
    gap: 10px;
}
.first-artical_inner a,
.full-unstyled-link ,
.first-artical-date{
   text-decoration: none;
}
.full-unstyled-link ,
  .first-artical-date{
  margin: 0;
  text-transform: uppercase;
  font-size: 14px;
  font-weight: 400;
  color: #2D2D2D;
  line-height: 1.2;
  margin: 0;
}
@media only screen and (max-width: 767px){
  .artical-banner .first-artical{
    position: relative;
  }
  .first-artical_box{
    width: 100%;
  }
  .first-artical_box{
    padding: 30px;
    height: 100%;
  }
  .first-artical .page-width{
    padding: 0;
  }
  .first-artical_inner h3{
    margin-bottom: 12px;
    font-size: 28px;
  }
  .artical-banner .artical_featured-image img{
    height: 100%;
  }
}
</style>
<div class="main-blog artical-banner  section-{{ section.id }}-padding">
<div class="blog-articles-box">
  {% assign artical = blog.articles[0] %}
  {% if artical != blank %}
  <div class='artical_featured-image'>
    {{ artical.image | image_url: width: 1920 | image_tag  }}
  </div>
  <div class="first-artical">
    <div class="page-width">
      <div class='first-artical_inner first-artical_box'>
        <a href="{{ artical.url }}">
          <h3>{{ artical.title }}</h3>
          </a>
          <div class="first-artical-tag-date">
            {% if artical.metafields.custom.blog_reference != blank or artical.metafields.custom.blog_reference_text != blank %}
            <p class="first-artical-tag">
            <a href="{{ artical.metafields.custom.blog_reference }}" class="full-unstyled-link">
              {{ artical.metafields.custom.blog_reference_text }}
            </a>
           </p>
          {% endif %}
            <span style='color: #000'>|</span>
              <a href="{{ artical.url }}" class="first-artical-date"> 
              {{- artical.published_at | time_tag: format: 'date' -}}
            </a>
          </div>
        
      </div>
    </div>
  </div>
  {% endif %}
</div>
</div>
{% schema %}
  {
    "name": "Fist Artical",
    "settings": [],
    "presets":[
      {
        "name": "Fist Artical"
      }
    ]
  }
{% endschema %}
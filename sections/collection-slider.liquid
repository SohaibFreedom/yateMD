<style>
.collection-img{
  height: 100%;
}
.collection-img img{
  max-width: 100%;
  height: 100%;
  display: block;
  margin: 0 auto;
  object-fit: cover;
}
.collection-slider-section{
  padding: 50px 0;
}
.collection-slider .slick-list{
  overflow: hidden; 
}
.collection-slider{
  list-style: none;
  padding: 0;
  margin: 0;
}
.collection-slider-section .slick-track{
  display: flex;
  align-items: center;
}
.collection-slider-section .page-width{
  max-width: 100%;
}
.collection-title{
  font-size: 24px;
  font-weight: 400;
  line-height: 1.2;
  margin-top: 0;
  margin-bottom: 8px;
}
.collection-main-title{
  color: #fff;
}
.collection-box{
  position: relative;
  border-radius: 20px;
  overflow: hidden;
}
.collection-inner-box{
  padding: 24px;
  position: absolute;
  inset: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between
}
.collection-btns{
  display: flex;
  gap: 20px;
}
.collection-btns .button{
  padding: 0 15px;
}
.collection-btns .button,
.collection-btns .button-product{
  width: 100%;
}
.collection-inner {
  overflow-x: auto;
  padding: 0 5%;
}
.collection-blog-inner{
  padding: 0 5%;
}
.slider-content {
  padding: 0 28px;
  padding: 0;
  gap: 20px;
  display: flex;
  flex-wrap: nowrap;
  -webkit-overflow-scrolling: touch;
  -ms-overflow-style: -ms-autohiding-scrollbar;
  margin: 0;
}
.slider-content li {
  list-style-type: none;
  flex: 0 0 auto;
  width: 27%;
  margin: 0 4px;
  cursor: pointer;
  &: nth-of-type(3),;
}
.collection-inner::-webkit-scrollbar{
  display: none;
}
.collection-slider-section .cart-btn{
  background-color: #fff;
  color: #000;
}
.collection-slider-section .collection-btns .button:after{
  box-shadow: unset;
} 
.collection-descrtion-button span{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: #000;
  display: flex;
  align-items: center;
  justify-content: center;
}
.collection-descrtion-button a{
  display: flex;
  align-items: center;
  gap: 15px;
  font-size: 24px;
  font-weight: 400;
  line-height: 1.2;
  color: #000;
  text-decoration: none;
}
.collection-inner-blog{
  display: flex;
  justify-content: space-between;
  margin-top: 60px;
  align-items: center
}
.collection-descrbtion{
  max-width: 730px;
}
.collection-descrbtion p{
  margin: 0;
  font-size: 12px;
  color: rgba(0, 0, 0, 0.54);
  line-height: 1.3;
  font-weight: 700;
}
@media only screen and (max-width: 1299px){
  .collection-btns{
    flex-wrap: wrap;
  }
}
@media only screen and (max-width: 1199px){
  .collection-btns{
    gap: 10px;
  }
  .collection-btns .button{
    min-height: 40px;
    font-size: 14px;
  }
  .slider-content{
    gap: 15px;
  }
  .collection-inner-box{
    padding: 18px;
  }
  .collection-title{
    font-size: 20px;
  }
  .slider-content li{
    width: 37%;
  }
}
@media only screen and (max-width: 991px){
  .collection-slider-section{
    padding: 40px 0;
  }
  .collection-descrtion-button a{
  	font-size: 20px;
  }
  .collection-descrtion-button span{
  	width: 30px;
  	height: 30px;
  }
  .collection-descrtion-button a span svg{
  	width: 20px;
  }
  .collection-inner-blog{
  	margin-top: 50px;
  }
  .collection-descrbtion p{
    max-width: 450px;
  }
}
@media only screen and (max-width: 767px){
  .collection-slider-section{
    padding: 30px 0;
  }
  .slider-content li{
    width: 47%;
  }
  .collection-inner{
    padding: 0 15px;
  }
  .collection-inner{
    padding: 0 15px;;
  }
  .slider-content{
    gap: 8px;
  }
  .collection-btns .button{
    min-height: 35px;
  }
  .collection-descrbtion p{
	text-align: center;
  }
  .collection-inner-blog{
  	flex-wrap: wrap;
  	gap: 20px;
    flex-direction: column;
  }
 
}
@media only screen and (max-width: 575px){
  .slider-content li{
    width: 67%;
  }
  .collection-btns{
    gap: 5px;
  }
}
@media only screen and (max-width: 425px){
  .slider-content li{
    width: 90%;
  }
}
</style>
{% assign collection = section.settings.select_collection %}
<section class="collection-slider-section">
		<div class="collection-inner">
			<ul class='slider-content'>
                <li class="collection-box">
					<div class="collection-img">
						<img src="{{ collection.featured_image | img_url: 'master' }}" alt="{{ collection.handle }}">
					</div>
					<div class='collection-inner-box'>
						<div class="collection-content">
							<h3 class='collection-title collection-main-title'>{{ collection.title }}</h3>
						</div>
						<div class="collection-btns">
							<a href="{{ collection.url }}" class="button buy-now-btn">Get Started</a>
						</div>
					</div>
				</li>
               {%- for product in collection.products limit: 10 -%}
                 {%- liquid
                    assign product_form_id = 'quick-add-' | append: section_id | append: product.id
                  -%}
				<li class="collection-box">
					<div class="collection-img">
						<img src="{{ product.featured_image | img_url: 'master' }}" alt="{{ product.handle }}">
					</div>
					<div class='collection-inner-box'>
						<div class="collection-content">
							<h3 class='collection-title'>{{ product.title }}</h3>
						</div>
						<div class="collection-btns">
							<a href="{{ product.url }}" class="button buy-now-btn">Get Started</a>
                            <product-form data-section-id="{{ section.id }}" class='button-product'>
                              {%- form 'product',
                                  product,
                                  id: product_form_id,
                                  class: 'form',
                                  novalidate: 'novalidate',
                                  data-type: 'add-to-cart-form'
                                -%}
                                  <input
                                    type="hidden"
                                    name="id"
                                    value="{{ product.selected_or_first_available_variant.id }}"
                                    class="product-variant-id"
                                    {% if product.selected_or_first_available_variant.available == false %}
                                      disabled
                                    {% endif %}
                                  >
                                  <button
                                    id="{{ product_form_id }}-submit"
                                    type="submit"
                                    name="add"
                                    class="quick-add__submit cart-btn button button--full-width button--secondary{% if horizontal_quick_add %} card--horizontal__quick-add{% endif %}"
                                    aria-haspopup="dialog"
                                    aria-labelledby="{{ product_form_id }}-submit title-{{ section_id }}-{{ product.id }}"
                                    aria-live="polite"
                                    data-sold-out-message="true"
                                    {% if product.selected_or_first_available_variant.available == false %}
                                      disabled
                                    {% endif %}
                                  >
                                    <span>
                                      {%- if product.selected_or_first_available_variant.available -%}
                                        {{ 'products.product.add_to_cart' | t }}
                                      {%- else -%}
                                        {{ 'products.product.sold_out' | t }}
                                      {%- endif -%}
                                    </span>
                                    <span class="sold-out-message hidden">
                                      {{ 'products.product.sold_out' | t }}
                                    </span>
                                    {%- if horizontal_quick_add -%}
                                      <span class="icon-wrap">{% render 'icon-plus' %}</span>
                                    {%- endif -%}
                                    {%- render 'loading-spinner' -%}
                                  </button>
                                {%- endform -%}
                              </product-form>
						</div>
					</div>
				</li>
              {% endfor %}
			</ul>
		</div>
  <div class='collection-blog-inner'>
      <div class='collection-inner-blog'>
        <div class='collection-descrbtion'>
          <p>{{ section.settings.collection_des }}</p>
        </div>
      <div class='collection-descrtion-button'>
        {% if section.settings.button_text_url != blank %}
          <a href="{{ section.settings.button_text_url }}">{{ section.settings.collectio_button_text }} <span direction="right" class="svg-iconstyle__RotationWrapper-sc-sa211s-0 BsCCE"><svg width="24" height="24" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" fill="none"><path fill-rule="evenodd" clip-rule="evenodd" d="M12.6068 4.2343C12.2163 3.84378 11.5831 3.84378 11.1926 4.2343C10.8021 4.62482 10.8021 5.25799 11.1926 5.64851L14.5443 9.00022H4.16797C3.61568 9.00022 3.16797 9.44794 3.16797 10.0002C3.16797 10.5525 3.61568 11.0002 4.16797 11.0002H14.5451L11.1926 14.3527C10.8021 14.7433 10.8021 15.3764 11.1926 15.767C11.5831 16.1575 12.2163 16.1575 12.6068 15.767L17.666 10.7077C18.0566 10.3172 18.0566 9.68405 17.666 9.29352L12.6068 4.2343Z" fill="rgba(255,255,255, 1)"></path></svg></span></a>
     {% endif %}
       </div>
      </div>
  </div
</section>

{% schema %}
  {
    "name": "Collection Slider",
    "settings": [
      {
        "type": "collection",
        "id": "select_collection",
        "label": "Collection"
      },
      {
        "type":"textarea",
        "id": "collection_des",
        "label": "Text"
      },
       {
        "type":"text",
        "id": "collectio_button_text",
        "label": "Button Text"
      },
      {
        "type":"url",
        "id": "button_text_url",
        "label": "Button Url"
      }
    ],
    "presets":[
      {
        "name": "Collection Slider"
      }
    ]
  }
{% endschema %}
<style>
         .section-{{ section.id }}-padding .custom_imagetext_backgroundimage{
          padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
          padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
        }

        @media screen and (min-width: 750px) {
          .section-{{ section.id }}-padding  .custom_imagetext_backgroundimage {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
          }
        }

      .custom_imagetext_wrapper .button {
        background-color:#4c3a2c !important;
      }
        .custom_imagetext_wrapper {
              {% if section.settings.max_width %}
          max-width:{{ section.settings.max_width }};
                   {% endif %}
          margin: 0 auto;
        }


          .custom_imagetext_wrapper {
              display: flex;
              align-items: {{section.settings.align_items}};
              gap: 2%;
          }

            .custom_imagetext-section .image-column {

              background-size: cover;
              background-position: center;
              width:50%;
              display:block;
              height:500px;
            }
          .custom_imagetext-section .text-column {
              padding: 20px;
              width: 40%;
          }

            .custom_imagetext-section .main__heading {
              font-size: 24px;
            }

            .custom_imagetext-section p {
              font-size: 16px;
            }
          @media screen and (max-width: 768px) {
            .custom_imagetext-section .text-column , .custom_imagetext-section .image-column{
        float:none;
        width: 100%;
    }
            .custom_imagetext_wrapper {

        flex-direction: column;
    }
            .custom_imagetext_backgroundimage {
      padding: 2rem 3rem !important;
  }
          }
</style>

<section
  class=" section-{{ section.id }}-padding custom_imagetext-section {{ section.settings.custom_class }}"
  id="{{ section.settings.custom_id }}"
>
  <div class="custom_imagetext_backgroundimage" style="background:{{ section.settings.background_color }};">
    <div
      class="custom_imagetext_wrapper"
      style="background:{{ section.settings.text_bgcolor }};"
    >
      <div class="image-column" style="background-image: url('{{section.settings.bgImage | img_url:''}}');"></div>
      <div class="text-column">
        <h2
          {% if section.settings.headingClass %}
            class="{{ section.settings.headingClass }}"
          {% endif %}
          style="font-size:{{section.settings.heading_size}}px;"
        >
          {{ section.settings.heading }}
        </h2>
        <p class=" {{ section.settings.textClass }}" style="font-size:{{section.settings.text_size}}px;">
          {{ section.settings.description }}
        </p>
        {% if section.settings.btn_text %}
          <a class="button" href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}</a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Image Text",
  "settings": [
       {
      "type": "color",
      "id": "background_color",
      "label": "Background Color"
    },
         {
      "type": "color",
      "id": "text_bgcolor",
      "label": "Text Bg Color"
    },
        {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    },
  {
         "type": "text",
    "id": "custom_class",
    "label": "Custom Class"
    },
      {
         "type": "text",
    "id": "max_width",
    "label": "Max width"
    },
       {
         "type": "text",
    "id": "align_items",
    "label": "ALign Items",
      "default": "flex-start"
    },
       {
         "type": "text",
    "id": "custom_id",
    "label": "Custom id"
    },

    {
         "type": "liquid",
    "id": "heading",
    "label": "Heading"
    },
      {
         "type": "text",
    "id": "headingClass",
    "label": "Heading Class"
    },
         {
         "type": "text",
    "id": "heading_size",
    "label": "Heading Size"
    },
             {
         "type": "text",
    "id": "btn_text",
    "label": "Button"
    },
             {
         "type": "url",
    "id": "btn_link",
    "label": "Button Url"
    },

     {
  "type": "image_picker",
  "id": "bgImage",
  "label": "Image"
},
    {
         "type": "liquid",
    "id": "description",
    "label": "Description "
    },
      {
         "type": "text",
    "id": "textClass",
    "label": "Text Class"
    },
         {
         "type": "text",
    "id": "text_size",
    "label": "Text Size"
    }

  ],
 "presets": [
  {
    "name": "Custom Image Text"
  }
]
}
{% endschema %}

<div class="section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="ME-experts-row">
      <div class="ME-experts-content">
        <h2>{{ section.settings.title }}</h2>
        {{ section.settings.textarea }}
        <a class="button" href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
      </div>
      <div class="ME-experts-video">
        {{
          section.settings.video
          | video_tag:
            image_size: '1100x',
            autoplay: true,
            loop: true,
            controls: false,
            muted: mute
        }}
      </div>
  </div>
</div>
<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .ME-experts-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    max-width: 1270px;
    align-items: center;
    margin: 0 auto;
  }
  .ME-experts-content h2 {
    font-size: 36px;
    letter-spacing: 0;
    line-height: 1.4;
    margin: 0 0 16px;
  }
  .ME-experts-content h3 {
    font-size: 26px;
    line-height: 1;
    margin: 0 0 20px;
    color: #212121;
    letter-spacing: 0;
  }
  .ME-experts-content ul {
    color: rgb(0 0 0 / 54%);
    padding-left: 20px;
    font-size: 18px;
    line-height: 1.5;
    margin: 0 0 20px;
  }
  .ME-experts-content {
    align-self: center;
  }
  .ME-experts-video video {
    display: block;
    max-width: 100%;
    object-fit: cover;
  }
  .ME-experts-video {
    width: 100%;
    display: block;
    max-width: 540px;
    border-radius: 50px;
    overflow: hidden;
    margin: 0 auto;
  }
  .ME-experts-content ul li:not(:last-child) {
    margin-bottom: 10px;
  }
  @media only screen and (max-width: 991px){
    .ME-experts-content h2 {
      font-size: 32px;
      letter-spacing: 0;
      line-height: 1.2;
      margin: 0 0 13px;
    }
    .ME-experts-content h3 {
      font-size: 22px;
    }
    .ME-experts-content ul {
      font-size: 17px;
      margin: 0 0 25px;
    }
  }
  @media only screen and (max-width: 991px){
    .ME-experts-row {
      grid-template-columns: 1fr;
      gap: 30px;
    }
    .ME-experts-content h2 {
      font-size: 26px;
    }
    .ME-experts-content h3 {
      font-size: 18px;
    }
    .ME-experts-content ul {
      font-size: 16px;
        line-height: 1.3;
    }
    .ME-experts-content ul li:not(:last-child) {
      margin-bottom: 5px;
    }
  }
</style>
{% schema %}
{
  "name": "ME Experts Section",
  "tag" : "section",
  "class" : "ME-experts-section",
  "settings": [
    {
      "type" : "video",
      "id" : "video",
      "label" : "Video" 
    },
    {
      "type" : "text",
      "id" : "title",
      "label" : "Title" 
    },
    {
      "type" : "richtext",
      "id" : "textarea",
      "label" : "Text" 
    },
    {
      "type" : "text",
      "id" : "button_text",
      "label" : "Button Text" 
    },
    {
      "type" : "url",
      "id" : "button_link",
      "label" : "Button Link" 
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ]
  }
{% endschema %}
<style>
.categories-banner-section{
  background: #efe8df;
  border: 1px solid rgb(220, 215, 206);
}
.categories-banner-section .page-width{
  max-width: 1090px;
}
.categories-heading{
  font-size: 36px;
  font-weight: 900;
  line-height: 1.3;
  margin: 0;
  color: #000;
}
@media only screen and (max-width: 767px){
  .categories-heading{
    font-size: 30px;
    text-align: center;
  }
  .categories-banner-section{
    padding: 50px 0 !important;
  }
}
</style>
{% if section.settings.heading_text != blank  %}
<section class="categories-banner-section" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
	<div class="page-width">
		<h2 class="categories-heading">{{ section.settings.heading_text }}</h2>
	</div>
</section>
{% endif %}
{% schema %}
  {
    "name": "Categorie Banner",
    "settings": [
      {
        "type": "text",
        "id": "heading_text",
        "label": "Heading Text"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding Top",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 0
      }
    ],
    "presets":[
      {
        "name": "Categorie Banner"
      }
    ]
  }
{% endschema %}


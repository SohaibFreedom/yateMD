<section class="image-text-section">
  <div class="page-width">
    <div class="image-text_inner">
        <h2> {{ section.settings.title }} </h2>
        <div class="rte">
          {{ section.settings.add_text }}
        </div>
    </div>
    {{ section.settings.video | video_tag: width: 1920, class: 'mens-video-text-video' , image_size: '1920x', autoplay:true, loop: true, controls: false, muted: true }}
    
  </div>
</section>

{% schema %}
  {
    "name": "Mens Image text Section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "richtext",
        "id": "add_text",
        "label": "Add Text"
      },
      {
        "type": "video",
        "id": "video",
        "label": "Video"
      }
    ],
      "presets":[
      {
        "name": "Mens Image text Section"
      }
    ]
  }
{% endschema %}



<style>
.image-text-section {
  width: 100%;
  display: inline-block;
}
.image-text-section .image-text_inner {
  text-align: center;
}
.image-text-section .image-text_inner h2 {
  margin: 0 0 25px;
  font-size: 62px;
  font-weight: 400;
  line-height: 1;
  font-family: "Anton", sans-serif;
  letter-spacing: 0;
  text-transform: uppercase;
}
.image-text-section .image-text_inner .rte {
  width: 100%;
  max-width: 1166px;
  margin: 0 auto 46px;
  font-size: 23px;
  line-height: 1.4;
  letter-spacing: 0;
  font-family: "Nunito Sans", sans-serif;
}
.image-text-section img {
  width: 100%;
  max-width: 1358px;
  margin: 0 auto;
  display: block;
}
.image-text-section video {
  width: 100%;
  max-width: 100%;
  height: 770px;
  object-fit: cover;
}


@media only screen and (max-width: 1199px) {
  .image-text-section video {
    height: auto;
  }
}
@media only screen and (max-width: 1024px) {  
  .image-text-section .image-text_inner h2 {
    margin: 0 0 15px;
    font-size: 46px;
  }
  .image-text-section .image-text_inner .rte {
    margin: 0 auto 26px;
    font-size: 20px;
  }
}

@media only screen and (max-width: 767px) {  
  .image-text-section .image-text_inner h2 {
      font-size: 40px;
  }
  .image-text-section .image-text_inner .rte {
    margin: 0 auto 20px;
    font-size: 16px;
  }
}
  
</style>
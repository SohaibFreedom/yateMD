<style>
.our-medical-section h2.our-medical-title{
	font-size: 24px;
	font-weight: 500;
	line-height: 1.3;
	margin-top: 0;
	margin-bottom: 50px;
	text-align: center;
    text-transform: uppercase;
}
.our-medical-row{
    display: grid;
	grid-template-columns: repeat(2,1fr);
	gap: 30px;
}
.our-medical-col{
	width: 100%;
}
.our-medical-content{
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 30px;
}
.our-medical-img img{
	display: block;
	margin: 0 auto;
}
.our-medical_name{
	font-size: 20px;
	font-weight: 700;
	line-height: 1.3;
	color: #000;
    margin: 15px 0;
}
.our-medical-link a{
	font-size: 16px;
	font-weight: 400;
	line-height: 1;
	color: #000;
	text-decoration: underline;
}
@media only screen and (max-width: 1199px){
  .our-medical-row{
    grid-template-columns: repeat(1,1fr);
  }
  .our-medical-content{
    align-items: center;
  }
}
@media only screen and (max-width: 749px){
 .our-medical-section h2.our-medical-title{
	margin-bottom: 30px;
	font-size: 22px;
  }
  .our-medical_name{
    margin-top: 0;
    font-size: 17px;
    margin-bottom: 8px;
  }
  .our-medical-content p{
    margin-top: 0;
    font-size: 14px;
    margin-bottom: 5px;
  }
  .our-medical-link a{
    font-size: 15px;
  }
  .our-medical-content{
    gap: 20px;
  }
  .our-medical-img img{
    max-width:150px;
  }
}
@media only screen  and (max-width: 575px){
  .our-medical-content{
    gap: 10px;
  }
  .our-medical-content{
    align-items: start;
  }
  .our-medical-img img{
    max-width: 80px;
  }
  .our-medical-link a{
    font-size: 14px;
  }
}
</style>
  <section class="our-medical-section" style='padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;'>
	<div class="page-width">
      {% if section.settings.title_name != blank %}
      <h2 class='our-medical-title'>{{ section.settings.title_name }}</h2>
      {% endif %}
		<div class="our-medical-row">
          {% for block in section.blocks %}
			<div class="our-medical-col">
				<div class="our-medical-content">
					<div class="our-medical-img">
                      {% if block.settings.dr_image != blank %}
                      {{ block.settings.dr_image | img_url: '300x305' | img_tag }}
                      {% endif %}
					</div>
                   <div>
                    {% if block.settings.dr_name != blank %}
					<h5 class="our-medical_name">{{ block.settings.dr_name }}</h5>
                  {% endif %}
                  {% if block.settings.medical_content != blank  %}
					<p>{{ block.settings.medical_content }}</p>
                  {% endif %}
                  {% if block.settings.text_link != blank or  block.settings.link_text != blank  %}
					<div class="our-medical-link">
						<a href="{{ block.settings.text_link }}" target="_blank">{{ block.settings.link_text }}</a>
					</div>
                  {% endif %}
                   </div>
				</div>
			</div>
          {% endfor %}
		</div>
	</div>
</section>
{% schema %}
  {
    "name": "Our Medical",
    "settings": [
      {
        "type": "text",
        "id": "title_name",
        "label": "Title Text"
      },
     {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 16
    }
    ],
    "blocks":[
        {
          "name": "Medical",
          "type": "medical",
          "limit": 2,
          "settings":[
            {
              "type": "image_picker",
              "id": "dr_image",
              "label": "Image"
            },
            {
              "type": "text",
              "id": "dr_name",
              "label": "Name Text"
            },
            {
              "type": "textarea",
              "id": "medical_content",
              "label": "text"
            },
          {
            "type": "text",
            "id": "link_text",
            "label": "Link Text"
          },
            {
              "type": "url",
              "id": "text_link",
              "label": "Text Link"
            }
          ]
        }
    ],
    "presets":[
      {
        "name": "Our Medical"
      }
    ]
  }
{% endschema %}


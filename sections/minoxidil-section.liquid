<section class="minoxidil-section">
  <div class="page-width">
    <div class="minoxidil-section-inner">
      <div class="minoxidil-section-text">
        <h2> {{ section.settings.title }} </h2>
        {% if section.settings.button_label != blank -%}
          <a
            {% if section.settings.button_link == blank %}
              role="link" aria-disabled="true"
            {% else %}
              href="{{ section.settings.button_link }}"
            {% endif %}
            class="button{% if section.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
            {{ section.shopify_attributes }}
          >
            {{ section.settings.button_label | escape }}
          </a>
        {%- endif -%}
      </div>
      <div class="minoxidil-section-growth">
        {%- for block in section.blocks -%}
        <div class="minoxidil-section-growth_inner">
          <div class="minoxidil-section-growth_inner_img">
            <img src="{{ block.settings.image | img_url: 'master' }}">
          </div>
          <div class="minoxidil-section-growth_inner_text">
            <p> {{ block.settings.info }} </p>
          </div>
        </div>
        {% endfor %}
        <div class="info">
          {{ section.settings.info }}
        </div>
      </div>
    </div>
  </div>
</section>



{% schema %}
  {
    "name": "Minoxidil Section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "button_label",
        "default": "Button label",
        "label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
        "info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "t:sections.image-with-text.blocks.button.settings.button_link.label"
      },
      {
        "type": "checkbox",
        "id": "button_style_secondary",
        "default": false,
        "label": "t:sections.image-with-text.blocks.button.settings.outline_button.label"
      },
      {
        "type": "richtext",
        "id": "info",
        "label": "Info"
      }
    ],
     "blocks": [
    {
       "type": "growth",
       "name": "Growth",
       "settings": [
         {
            "type": "image_picker",
            "label": "image",
            "id": "image"
          },
          {
            "type": "text",
            "id": "info",
            "label": "Add Text"
          }
      ]
    }
  ],
          "presets": [
    {
      "name": "Minoxidil Section"
    }
  ]
  }
{% endschema %}

<style>

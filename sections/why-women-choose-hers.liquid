{% schema %}
  {
    "name": "Why women choose Hers",
    "settings": [
      {
        "type": "text",
        "id": "heading_text",
        "label": "Heading Text"
      },
      {
        "type": "textarea",
        "id": "heading_text_p",
        "label": "Text"
      },
       {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
         "default": "Get Started"
      },
       {
        "type": "url",
        "id": "button_url",
        "label": "Link"
      }
    ],
    "blocks":[
      {
        "name": "slide",
        "type": "Slide",
        "settings":[
          {
            "type": "text",
            "id": "slide_text",
            "label": "Slide Text"
          },
          {
            "type": "text",
            "id": "slide_text_clr",
            "label": "Text"
          },
          {
            "type": "image_picker",
            "id": "slide_image",
            "label": "Image"
          },
          {
            "type": "textarea",
            "id": "slide_textarea",
            "label": "Text"
          }
        ]
      }
    ],
    "presets":[
      {
        "name": "Why women choose Hers"
      }
    ]
  }
{% endschema %}
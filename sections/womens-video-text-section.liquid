<section class="mens-video-text-section womens-video-text-section">
  <div class="mens-video">
   {{ section.settings.video | video_tag: width: 1920, class: 'mens-video-text-video' , image_size: '1920x', autoplay:true, loop: true, controls: false, muted: true }}
    <div class="mens-video_inner">
      <h2> {{ section.settings.title }} </h2>
      <div class="has_info">
        <div class="has_info_main">
          <div class="has_num">
            <h4> {{ section.settings.has_num }} </h4>
          </div>
          <div class="has_info_inner">
            <h5> {{ section.settings.has_subtitle }} </h5>
            <p> {{ section.settings.has_info }} </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Womens Video Section",
    "settings": [
      {
        "type": "video",
        "id": "video",
        "label": "Video"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "has_num",
        "label": "# Number"
      },
      {
        "type": "text",
        "id": "has_subtitle",
        "label": "# Sub Title"
      },
      {
        "type": "text",
        "id": "has_info",
        "label": "# Info"
      }
    ],
        "presets":[
      {
        "name": "Womens Video Section"
      }
    ]
  }
{% endschema %}


<style>
.mens-video-text-section {
  width: 100%;
  display: inline-block;
  vertical-align: top;
}
.mens-video-text-section .mens-video {
  position: relative;
}
.mens-video-text-section .mens-video video {
  width: 100%;
  max-width: 100%;
  height: 745px;
  object-fit: cover;
  object-position: center center;
  display: block;
}
.mens-video-text-section .mens-video .mens-video_inner {
  position: absolute;
  padding: 0 63px;
  transform: translate(0, -50%);
  top: 50%;
}
.mens-video-text-section .mens-video .mens-video_inner h2 {
  font-family: "Nunito Sans", sans-serif;
  font-weight: 700;
  font-size: 60px;
  line-height: 1.04;
  color: #fff;
  margin: 0;
  width: 100%;
  max-width: 570px;
  letter-spacing: 0;
  text-transform: capitalize;
  text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.43);
}
.mens-video-text-section .mens-video .mens-video_inner .has_info {
  margin-top: 38px;
}
.mens-video-text-section .mens-video .mens-video_inner .has_info .has_info_main {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 1);
  width: 100%;
  max-width: 396px;
  gap: 20px;
  border-radius: 7px;
  overflow: hidden;
}
.mens-video-text-section .mens-video .mens-video_inner .has_info .has_info_main .has_num {
  background-color: rgba(225, 236, 227, 1);
  padding: 20px 26px;
  border-radius: 7px;
}
.mens-video-text-section .mens-video .mens-video_inner .has_info .has_info_main .has_num h4 {
  margin: 0;
  font-size: 29px;
  font-weight: 700;
  border-radius: 7px;
  font-family: "Nunito Sans", sans-serif;
}
.mens-video-text-section .mens-video .mens-video_inner .has_info .has_info_main .has_info_inner h5 {
  margin: 0;
  font-size: 22px;
  letter-spacing: 0;
  font-weight: 700;
  font-family: "Nunito Sans", sans-serif;
}
.mens-video-text-section .mens-video .mens-video_inner .has_info .has_info_main .has_info_inner p {
  margin: 0;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  font-size: 19px;
  font-family: "Nunito Sans", sans-serif;
}


@media only screen and (max-width: 1024px) {
  .mens-video-text-section .mens-video .mens-video_inner {
    padding: 0 15px;
  }
  .mens-video-text-section .mens-video .mens-video_inner h2 {
      font-size: 42px;
      max-width: 330px;
  }
  .mens-video-text-section .mens-video .mens-video_inner .has_info .has_info_main .has_num {
    padding: 15px 18px;
  }
  .mens-video-text-section .mens-video .mens-video_inner .has_info .has_info_main .has_info_inner h5 {
    font-size: 18px;
  }
  .mens-video-text-section .mens-video .mens-video_inner .has_info .has_info_main .has_info_inner p {
    font-size: 16px;
  }
  .mens-video-text-section .mens-video .mens-video_inner .has_info .has_info_main {
    max-width: 336px;
  }
  .mens-video-text-section .mens-video video{
    height: 495px;
  }
}

@media only screen and (max-width: 767px) {
  .mens-video-text-section .mens-video .mens-video_inner .has_info .has_info_main .has_num h4 {
    font-size: 18px;
  }
  .mens-video-text-section .mens-video .mens-video_inner .has_info .has_info_main{
    gap: 10px;
  }
  .mens-video-text-section .mens-video .mens-video_inner .has_info .has_info_main .has_num {
    padding: 20px 18px;
  }
  .mens-video-text-section .mens-video {
    position: relative;
  }
  .mens-video-text-section .mens-video:before {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background-color: rgb(0 0 0 / 50%);
    display: block;
    z-index: 0; 
  }
}
  
</style>
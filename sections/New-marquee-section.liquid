{% schema %}
{
  "name": "New Marquee Section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#000000"
    },
        {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#fff"
    },

    {
      "type": "checkbox",
      "id": "enable_animation",
      "label": "Enable Animation",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Content Block",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
          {
          "type": "text",
          "id": "class",
          "label": "Class"
        },
           {
          "type": "image_picker",
          "id": "Icon_image",
          "label": "Icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "New Marquee Section"
    }
  ]
}
{% endschema %}

<div class="product-marquee">
  <section class="{% if section.settings.enable_animation %}enable-animation{% endif %}">
    <div class="marquee">
      <ul class="marquee__content">
        {% for block in section.blocks %}
          <li style="color:{{ section.settings.text_color }}">
            {% if block.settings.Icon_image %}
              <div class="marquee_img {{ block.settings.class }}">
                <img src="{{ block.settings.Icon_image | img_url:"" -}}">
              </div>
            {% endif %}
            {{- block.settings.text }}
          </li>
        {% endfor %}
      </ul>
      <ul class="marquee__content">
        {% for block in section.blocks %}
          <li style="color:{{ section.settings.text_color }}">
            {% if block.settings.Icon_image %}
              <div class="marquee_img {{ block.settings.class }}">
                <img src="{{ block.settings.Icon_image | img_url:"" -}}">
              </div>
            {% endif %}
            {{- block.settings.text }}
          </li>
        {% endfor %}
      </ul>
      <ul class="marquee__content">
        {% for block in section.blocks %}
          <li style="color:{{ section.settings.text_color }}">
            {% if block.settings.Icon_image %}
              <div class="marquee_img {{ block.settings.class }}">
                <img src="{{ block.settings.Icon_image | img_url:"" -}}">
              </div>
            {% endif %}
            {{- block.settings.text }}
          </li>
        {% endfor %}
      </ul>
    </div>
  </section>
</div>

<style>
             .marquee_img.strike:after {
              position: absolute;
              content: "";
              background: #000;
              height: 100%;
              width: 2px;
              top: 0;
              left: 46%;
              transform: skew(-45deg);
          }
        .marquee_img {
          position: relative;
          margin: 0 auto;
          width: 40px;
          border: 1px solid #000;
          height: 40px;
          padding: 8px;
          border-radius: 50%;
          overflow: hidden !important;
          display: flex;
          align-items: center;
          justify-content: center;
      }
                   .product-marquee li {
                    list-style-type: none;
                     color:#000;
                  }
        .marquee_img img {

            width: 30px;
            height: 30px;
        }

            .marquee__content li {
                    display: flex;
                    align-items: center;
                    gap: 10px;
                  width: max-content;
                }
                  .product-marquee section {
                   background: {{ section.settings.background_color }};
                  }

                  .product-marquee .marquee {
                    --gap: 0rem;
                    position: relative;
                    display: flex;
                    overflow: hidden;
                    user-select: none;
                    gap: var(--gap);
                    width: 100%;
                  }

                  .product-marquee .marquee__content {
                    flex-shrink: 0;
                    display: flex;
                    gap: 50px;
                    max-width: fit-content;
                  }

                  @keyframes scroll {
                    0% {
                      transform: translateX(0);
                    }
                    100% {
                      transform: translateX(-100%);
                    }
                  }


                  .product-marquee .enable-animation .marquee__content {
                    animation: scroll 38s linear infinite;
                        flex-shrink: 0;
                  }

              .product-marquee .marquee__content > * {
                flex: 0 0 auto;
                font-size: 23px;
                font-weight: 600;
                margin: 2px;
                padding: 1rem 3rem;
                border-radius: 0.25rem;
                text-align: center;
            }
    @media only screen and (max-width: 768px) {
    .product-marquee .marquee .marquee__content {
        max-width: max-content;
      margin:5px 0;
    }
      .marquee_img {

      width: 30px;

      height: 30px;

  }
  .product-marquee .marquee__content > * {

      font-size: 18px;

  }
    }
</style>

{{ 'ro-co-cards.css' | asset_url | stylesheet_tag }}

<div class="ro-co-cards-section">
  <div class="roc-section-bg">
    <div class="page-width">
      <div class="ro-co-wrapper">
        {% for block in section.blocks %}
          <div class="ro-co-cards-card">
            <h2 class="ro-co-cards-card-heading">{{ block.settings.heading }}</h2>
            <p class="ro-co-cards-card-description">{{ block.settings.description }}</p>
            <a class="ro-co_learn" href="{{ block.settings.Link }}">{{ block.settings.button_text }}</a>
            {% if block.settings.image %}
              <img
                src="{{ block.settings.image | img_url: 'master' }}"
                alt="{{ block.settings.heading | escape }}"
                class="ro-co-cards-card-image"
              >
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Ro-Co Cards Section",
  "settings": [
    {
      "type": "color",
      "id": "background_color_start",
      "label": "Background Gradient Start Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "background_color_end",
      "label": "Background Gradient End Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Card Heading",
          "default": "Card Heading"
        },
          {
          "type": "url",
          "id": "Link",
          "label": "Button link"
        },
          {
          "type": "text",
          "id": "button_text",
          "label": "Button text"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Card Description",
          "default": "Description here"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Card Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ro-Co Cards",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="mens-video-text-section">
  <div class="mens-video">
    {% if section.settings.video %}
        {{ section.settings.video | video_tag: width: 1920, class: 'mens-video-text-video' , image_size: '1920x', autoplay:true, loop: true, controls: false, muted: true }}
    {% else %}
        {{ section.settings.bg_image | image_url: width: 1920 | image_tag }}
    {% endif %}
    <div class="mens-video_bg">
      {% if section.settings.video_bg_inner %}
        {{ section.settings.video_bg_inner | video_tag: width: 1920, class: 'mens-video-text-section', image_size: '1100x', autoplay: true, loop: true, controls: false, muted: true }}
      {% elsif section.settings.bg_image_inner %}
        {{ section.settings.bg_image_inner | image_url: width: 1920 | image_tag }}
      {% else %}
        <!-- Your content here with transparent background -->
      {% endif %}
      <div class="mens-video_inner">
      <h2> {{ section.settings.title }} </h2>
      <div class="has_info">
        <div class="has_info_main">
          <div class="has_num">
            <h4> {{ section.settings.has_num }} </h4>
          </div>
          <div class="has_info_inner">
            <h5> {{ section.settings.has_subtitle }} </h5>
            <p> {{ section.settings.has_info }} </p>
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Mens Video Section",
    "settings": [
      {
        "type": "video",
        "id": "video",
        "label": "Video"
      },
      {
        "type": "image_picker",
        "id": "bg_image",
        "label": "Background Image"
      },
      {
        "type": "video",
        "id": "video_bg_inner",
        "label": "Video Inner"
      },
      {
        "type": "image_picker",
        "id": "bg_image_inner",
        "label": "Background Inner"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "has_num",
        "label": "# Number"
      },
      {
        "type": "text",
        "id": "has_subtitle",
        "label": "# Sub Title"
      },
      {
        "type": "text",
        "id": "has_info",
        "label": "# Info"
      }
    ],
        "presets":[
      {
        "name": "Mens Video Section"
      }
    ]
  }
{% endschema %}



<style>
  #shopify-section-{{section.id}} {
    padding-bottom: 70px;
  }
  .blog-banner-section {
    background:url('{{ section.settings.blog-banner-image | img_url: 'master' }}') repeat rgb(30,30,30) 63% 48% / cover;;
    padding: 50px 0;
    background-size: cover;
    background-repeat: no-repeat;
    height: calc(100vw / 3.22 * 16);
    max-height: 386px;
    position: relative;
  }
  .blog-banner-heading h1 {
      color: #fff;
    padding: 0 20px;
    font-size: 26px;
    letter-spacing: 0.5px;
    font-weight: 600;
  }
  .blog-banner-heading {
    font-weight: 500;
    text-align: center;
  }
  {% if section.settings.after == true %}
    section.sec-{{ section.id }}:after, section.blog-banner-section:before {
      content: '';
      height: 60px;
      width: 2px;
      display: inline-block;
      background: #fff;
      position: absolute;
      bottom: 0;
      margin: 0;
      left: 50%;
      transform: translateX(-50%);
    }
    section.blog-banner-section:before {
      top: 100%;
      background: #000;
      bottom: unset;
    }
  {% endif %}
  .blog-banner-width {
    display: flex;
    height: 100%;
    width: 100%;
    align-items: center;
    justify-content: center;
  }
  @media screen and (min-width: 768px){
  .blog-banner-section {
    height: calc(100vw / 16 * 3.22);
    background:url('{{ section.settings.blog-banner-image | img_url: 'master' }}') repeat rgb(30,30,30) 50% 50% / cover;
  }
</style>
<section class="blog-banner-section sec-{{ section.id }}">
  <div class=" blog-banner-width">
    <div class="blog-banner-heading"><h1>{{ section.settings.blog-banner-heading }}</h1></div>
  </div>
</section>
{% schema %}
  {
    "name": "Blog Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "blog-banner-image",
        "label": "Banner Image"
      },
      {
        "type": "text",
        "id": "blog-banner-heading",
        "label": "Banner Heading"
      },
      {
        "type": "checkbox",
        "id": "after",
        "label": "Show After before",
        "default": true
      }
    ],
    "presets":[
      {
        "name": "Blog Banner"
      }
    ]
  }
{% endschema %}
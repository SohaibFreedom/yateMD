<section class="womens-video-text-section_">
  <div class="mens-video page-width">
   {{ section.settings.video | video_tag: width: 1920, class: 'mens-video-text-video' , image_size: '1920x', autoplay:true, loop: true, controls: false, muted: true }}
    <div class="mens-video_inner">
      <h2> {{ section.settings.title }} </h2>
      <div class="has_info">
       <a href="{{ section.settings.button_link }}"> {{ section.settings.button_text }}  <span class="icon-wrap">{% render 'icon-arrow' %}</span></a>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Womens Video Section",
    "settings": [
      {
        "type": "video",
        "id": "video",
        "label": "Video"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Url"
      }
    ],
        "presets":[
      {
        "name": "Womens Video Section"
      }
    ]
  }
{% endschema %}


<style>
.womens-video-text-section_ {
  width: 100%;
  display: inline-block;
  vertical-align: top;
}
.womens-video-text-section_ .mens-video {
  position: relative;
}
.womens-video-text-section_ .mens-video video {
  width: 100%;
  max-width: 100%;
  height: 681px;
  object-fit: cover;
  object-position: center center;
  display: block;
}
.womens-video-text-section_ .mens-video .mens-video_inner {
  position: absolute;
  padding: 0 74px;
  transform: translate(0, -50%);
  top: 50%;
  right: 30px;
}
.womens-video-text-section_ .mens-video .mens-video_inner h2 {
  font-family: "Nunito Sans", sans-serif;
  font-weight: 700;
  font-size: 42px;
  line-height: 1.04;
  color: rgba(0, 0, 0, 1);
  margin: 0;
  width: 100%;
  max-width: 480px;
  letter-spacing: 0;
  text-transform: capitalize;
  text-align: right;
}
.womens-video-text-section_ .mens-video .mens-video_inner .has_info {
  margin-top: 23px;
}
.womens-video-text-section_ .mens-video .mens-video_inner .has_info .has_info_main {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 1);
  width: 100%;
  max-width: 396px;
  gap: 20px;
  border-radius: 7px;
  overflow: hidden;
}
.womens-video-text-section_ .mens-video .mens-video_inner .has_info .has_info_main .has_num {
  background-color: rgba(225, 236, 227, 1);
  padding: 20px 26px;
  border-radius: 7px;
}
.womens-video-text-section_ .mens-video .mens-video_inner .has_info .has_info_main .has_num h4 {
  margin: 0;
  font-size: 29px;
  font-weight: 700;
  border-radius: 7px;
  font-family: "Nunito Sans", sans-serif;
}
.womens-video-text-section_ .mens-video .mens-video_inner .has_info .has_info_main .has_info_inner h5 {
  margin: 0;
  font-size: 22px;
  letter-spacing: 0;
  font-weight: 700;
  font-family: "Nunito Sans", sans-serif;
}
.womens-video-text-section_ .mens-video .mens-video_inner .has_info .has_info_main .has_info_inner p {
  margin: 0;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  font-size: 19px;
  font-family: "Nunito Sans", sans-serif;
}
.womens-video-text-section_ .mens-video .mens-video_inner .has_info {
  margin-top: 23px;
  text-align: right;
}
.womens-video-text-section_ .mens-video .mens-video_inner .has_info a {
  width: 100%;
  max-width: 159px;
  width: 100%;
  display: inline-block;
  background-color: rgba(76, 58, 44, 1);
  color: #fff;
  text-decoration: none;
  padding: 18px 19px;
  /* font-family: Inter; */
  font-family: "Nunito Sans", sans-serif;
  font-size: 15px;
  line-height: 1;
  text-align: center;
}

@media only screen and (max-width: 1024px) {
  .womens-video-text-section_ .mens-video .mens-video_inner {
    padding: 0 30px;
  }
  .womens-video-text-section_ .mens-video .mens-video_inner h2 {
      font-size: 30px;
      max-width: 330px;
  }
  .womens-video-text-section_ .mens-video .mens-video_inner .has_info .has_info_main .has_num {
    padding: 15px 18px;
  }
  .womens-video-text-section_ .mens-video .mens-video_inner .has_info .has_info_main .has_info_inner h5 {
    font-size: 18px;
  }
  .womens-video-text-section_ .mens-video .mens-video_inner .has_info .has_info_main .has_info_inner p {
    font-size: 16px;
  }
  .womens-video-text-section_ .mens-video .mens-video_inner .has_info .has_info_main {
    max-width: 336px;
  }
  .womens-video-text-section_ .mens-video video{
    height: 495px;
  }
}

@media only screen and (max-width: 767px) {
  .womens-video-text-section_ .mens-video .mens-video_inner .has_info .has_info_main .has_num h4 {
    font-size: 18px;
  }
  .womens-video-text-section_ .mens-video .mens-video_inner .has_info .has_info_main{
    gap: 10px;
  }
  .womens-video-text-section_ .mens-video .mens-video_inner .has_info .has_info_main .has_num {
    padding: 20px 18px;
  }
  .womens-video-text-section_ .mens-video {
    position: relative;
  }

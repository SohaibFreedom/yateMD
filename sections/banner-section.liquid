    },
    {
      "type": "text",
      "id": "banner-button",
      "label": "Banner Button Text"
    },
    {
      "type": "url",
      "id": "banner-button-url",
      "label": "Banner Button Link"
    },
    {
      "type": "text",
      "id": "banner-call-button",
      "label": "Banner Call Button"
    },
    {
      "type": "url",
      "id": "banner-call-button-url",
      "label": "Banner Call Button Link"
    }
  ],
  "presets":[
    {
      "name": "Banner Section"
    }
  ]
}

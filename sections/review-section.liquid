<section class="review-section">
  <div class="page-width">
    <div class="main-review">
      <div class="rating">
        <h2>{{ section.settings.review_head }}</h2>
      </div>
      <div class="rating-star"><img src="{{ section.settings.review_image | img_url: "master" }}"></div>
      <div class="rating-button">
        <a href="{{ section.settings.review_button_url }}">{{ section.settings.review_button }}</a>
      </div>
      <div class="review-content">
        <div class="quote-svg">
          <svg xmlns="http://www.w3.org/2000/svg" width="70" height="70" viewBox="0 0 16 16">
            <path fill="currentColor" d="M3.516 7a3.5 3.5 0 1 1-3.5 3.5L0 10a7 7 0 0 1 7-7v2a4.97 4.97 0 0 0-3.536 1.464a5.01 5.01 0 0 0-.497.578c.179-.028.362-.043.548-.043zm9 0a3.5 3.5 0 1 1-3.5 3.5L9 10a7 7 0 0 1 7-7v2a4.97 4.97 0 0 0-3.536 1.464a5.01 5.01 0 0 0-.497.578c.179-.028.362-.043.549-.043z"/>
          </svg>
        </div>
        <div class="content">
          {% for block in section.blocks %}
            <p>
              {{ block.settings.review_content }}
              <span class="review-name">{{ block.settings.review_writer }}</span>
            </p>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick-theme.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick.min.css">
</head>
{% schema %}
{
  "name": "Review Section",
  "blocks": [
    {
      "type": "Reviews",
      "name": "Reviews",

      "settings": [
        {
          "type": "text",
          "id": "review_content",
          "label": "Review Content"
        },
        {
          "type": "text",
          "id": "review_writer",
          "label": "Review Content Writer"
        }
      ]
    }
  ],
  "settings": [
     {
        "type": "text",
        "id": "review_head",
        "label": "Review Head"
      },
     {
        "type": "image_picker",
        "id": "review_image",
        "label": "Review Image Star"
      },
     {
        "type": "text",
        "id": "review_button",
        "label": "Review Load More Button"
      },
     {
        "type": "url",
        "id": "review_button_url",
        "label": "Review Load More Button Url"
      }
  ],
  "presets":[
    {
      "name": "Review Section"
    }
  ]
}
{% endschema %}

{% stylesheet %}
{% endstylesheet %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
{% javascript %}
    $('.content').slick({
    dots: false,
    infinite: false,
    slidesToShow: 1,
    responsive: [
      {
        breakpoint: 1024,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1,
          infinite: true,
          dots: true
        }
      },
      {
        breakpoint: 600,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1,
          dots: true
        }
      },
      {
        breakpoint: 480,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1,
          dots: true
        }
      }
    ]
  });
{% endjavascript %}

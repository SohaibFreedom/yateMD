<style>
  .hair-video-review-section{
    padding: 60px 0;
  }
  .hair-video-review-row{
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }
  iframe.hair-video-review-youtube-video-link {
    width: 100%;
    height: 100%;
    min-height: 350px;
  }
  @media only screen and (max-width: 991px){
    iframe.hair-video-review-youtube-video-link{
      min-height: 250px;
    }
  }
  @media only screen and (max-width: 749px){
    .hair-video-review-section{
      padding: 50px 0;
    }
    .hair-video-review-row{
      grid-template-columns: repeat(1, 1fr);
    }
    iframe.hair-video-review-youtube-video-link{
      min-height: 390px;
    }
  }
  @media only screen and (max-width: 575px){
    iframe.hair-video-review-youtube-video-link{
      min-height: 300px;
    }
  }
  @media only screen and (max-width: 575px){
    iframe.hair-video-review-youtube-video-link{
      min-height: 210px;
    }
  }
</style>
<div class="hair-video-review-section">
  <div class="page-width">
    <div class="hair-video-review-row">
      {% for block in section.blocks %}
        <div class="hair-video-review-info">
          <iframe class="hair-video-review-youtube-video-link" src="{{ block.settings.video_link }}"></iframe>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Hair Video Review",
    "settings": [],
    "blocks": [
      {
        "type": "video",
        "name": "Video",
        "settings": [
          {
            "type": "text",
            "id": "video_link",
            "label": "Add Video Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hair Video Review"
      }
    ]
  }
{% endschema %}
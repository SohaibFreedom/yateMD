<style>
.why-keeps-section {
    background-color: rgb(250, 250, 245);
    padding: 80px 0;
    width: 100%;
    display: block;
}
.why-keeps-section .why-keeps_inner {
    display: flex;
    align-items: center;
    gap: 40px;
}
.why-keeps-section .why-keeps_inner .why-keeps_inner_img {
    width: 50%;
}
.why-keeps_inner .why-keeps_inner_text {
    width: 50%;
}
.why-keeps-section .why-keeps_inner .why-keeps_inner_img img.product-desktop-img {
    width: 100%;
    max-width: 100%;
    display: block;
}
.why-keeps_inner .why-keeps_inner_text h2 {
    margin: 0 0 20px;
    font-size: 36px;
    line-height: 1.1;
    font-weight: 600;
    letter-spacing: 0;
}
.why-keeps_inner .why-keeps_inner_text .info p {
    margin: 0;
    letter-spacing: 0;
}
.why-keeps_inner .why-keeps_inner_text .info ul {
    padding: 0;
    margin: 30px 0 0;
    list-style: none;
}
.why-keeps_inner .why-keeps_inner_text .info ul li {
    line-height: 1.5;
    padding-left: 40px;
    font-weight: 600;
    display: block;
    letter-spacing: 0;
    font-size: 18px;
    margin-bottom: 15px;
    position: relative;
    color: #000;
}
.why-keeps_inner .why-keeps_inner_text .info ul li:before {
    content: '';
    position: absolute;
    background-image: url('https://cdn.shopify.com/s/files/1/0673/3601/2023/files/checkmark-red.svg?v=1705302064');
    width: 24px;
    height: 18px;
    left: 0;
    background-size: 100%;
    background-repeat: no-repeat;
    top: 4px;
}
.why-keeps_inner .why-keeps_inner_text .info ul li:last-child {
  margin-bottom: 0;
}
.why-keeps-section .why-keeps_inner .why-keeps-button {
    margin-top: 40px;
}

@media only screen and (max-width: 749px) {
  .how-keeps-works-section {
    padding: 0 0 60px;
  }
  .why-keeps-section .why-keeps_inner {
    display: block;
  }
  .why-keeps-section .why-keeps_inner .why-keeps_inner_img {
    width: 100%;
  }
  .why-keeps_inner .why-keeps_inner_text {
    width: 100%;
    margin-top: 30px;
  }
  .why-keeps_inner .why-keeps_inner_text h2 {
    margin: 0 0 15px;
    font-size: 28px;
    text-align: center;
  }
  .why-keeps_inner .why-keeps_inner_text .info ul li {
    font-size: 16px;
    margin-bottom: 10px;
    padding-left: 30px;
  }
  .why-keeps_inner .why-keeps_inner_text .info ul li:before{
    width: 18px;
    height: 14px;
  }
  .why-keeps-section .why-keeps_inner .why-keeps-button {
    margin-top: 25px;
  }
  .why-keeps-section .why-keeps_inner .why-keeps-button a.button.button--primary {
    width: 100%;
    max-width: 100%;
  }
}
</style>

<section class="why-keeps-section"> 
  <div class="page-width">
    <div class="why-keeps_inner">
      <div class="why-keeps_inner_img">
        <img class="product-desktop-img" src="{{ section.settings.image | img_url: "master" }}">
      </div>
      <div class="why-keeps_inner_text">
        <h2> {{ section.settings.title }} </h2>
        <div class="info">
          {{ section.settings.info }}
        </div>
        <div class="why-keeps-button">
          <a class="button button--primary" href="{{ section.settings.btn_link }}"> {{ section.settings.btn_text }} </a>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Why Keeps Section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "richtext",
        "id": "info",
        "label": "Add Text"
      },
      {
        "type": "text",
        "id": "btn_text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "btn_link",
        "label": "Button Link"
      }
    ],
          "presets": [
    {
      "name": "Why Keeps Section"
    }
  ]
  }
{% endschema %}
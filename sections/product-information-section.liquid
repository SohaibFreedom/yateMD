<style>
.product-information-section {
    width: 100%;
    display: inline-block;
    vertical-align: top;
    background-color: rgb(250, 250, 245);
    padding-bottom: 36px;
}
.product-information-section h2 {
    margin: 0 0 36px;
    text-align: center;
    font-size: 36px;
    line-height: 1.1;
    font-weight: 600;
    letter-spacing: 0;
}
.product-information-section .img img {
    width: 100%;
    max-width: 100%;
    vertical-align: top;
}
.product-information-section  h3 {
    font-size: 24px;
    line-height: 1;
    margin: 54px 0;
    text-align: center;
    font-weight: 600;
}
.product-information-section .product-information_inner {
    display: flex;
    gap: 48px;
    align-items: flex-start;
}
.product-information-section .product-information_inner .product-information_inner_text {
    width: 33.33%;
    display: flex;
    align-items: flex-start;
}
.product-information-section .product-information_inner .product-information_inner_text .product-information_number {
    font-size: 36px;
    padding-top: 0;
    margin-left: 2.25rem;
    margin-right: 2.25rem;
    line-height: 1;
}
.product-information-section .product-information_inner .product-information_inner_text .product-info {
    letter-spacing: 0;
    width: 100%;
    max-width: 294px;
}

@media only screen and (max-width: 749px) {
  .product-information-section{
      margin-top: -10px;
  }
  .product-information-section h2 {
    margin: 0 0 20px;
    text-align: center;
    font-size: 28px;
  }
  .product-information-section h3{
    font-size: 20px;
    margin: 30px 0;
  }
  .product-information-section .product-information_inner {
    gap: 30px;
  }
}

@media only screen and (max-width: 575px) {
  .product-information-section .product-information_inner {
      flex-flow: wrap;
  }
  .product-information-section .product-information_inner .product-information_inner_text {
    width: 100%;
  }
  .product-information-section .product-information_inner { 
    gap: 10px;
  }
  .product-information-section .product-information_inner .product-information_inner_text .product-information_number {
    font-size: 16px;
    margin-left: 0;
    margin-top: 6px;
  }
}
</style>
<section class="product-information-section">
  <div class="page-width">
    <h2> {{ section.settings.title }} </h2>
    <div class="img">
      <img class="" src="{{ section.settings.image | img_url: "master" }}">
    </div>
    <h3> {{ section.settings.subtitle }} </h3>
    <div class="product-information_inner">

       {%- for block in section.blocks -%}
      <div class="product-information_inner_text">
        <div class="product-information_number">
          {{ block.settings.number }}
        </div>
        <div class="product-info">
          {{ block.settings.info }}
        </div>
      </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Product Info Section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle"
      }
    ],
    "blocks": [
    {
      "type": "list",
      "name": "List",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Numbar Text"
        },
        {
          "type": "text",
          "id": "info",
          "label": "Add Text"
        }
      ]
    }
  ],
          "presets": [
    {
      "name": "Product Info Section"
    }
  ]
  }
{% endschema %}
<style>
.nature-slider .slick-slide{
  float: left;
}
.nature-slider .slick-list{
  overflow: hidden;
} 
.nature-slide{
  margin: 0 10px;
  position: relative;
  overflow: hidden;
  border-radius: 16px;
  background: rgb(255, 255, 255);
  cursor: grab;
}
.nature-slide-p{
  color: rgba(0, 0, 0, 0.89);
  font-weight: 600;
  font-size: 18px;
  line-height: 1.5;
  font-family: Nunito, sans-serif;
  margin: 0;
  position: absolute;
  z-index: 1;
  left: 0;
  padding: 24px;
  top: 0;
}
.nature-content{
  width: 41.6667%;
}
.nature-section{
  padding: 50px 0;
}
.nature-content h2{
  font-size: 40px;
  font-weight:  400;
  line-height: 1.3;
  color: rgba(0, 0, 0, 0.89);
  margin-top: 0;
  margin-bottom: 16px;
}
.nature-content p{
  font-size: 18px;
  font-weight: 500;
  line-height: 1.5;
  color: rgba(0, 0, 0, 0.65);
  margin: 0;
}
.nature-row{
  display: flex;
  justify-content: space-between;
  padding-bottom: 100px;
}
.nature-slide img{
  display: block;
  max-width: 100%;
  height: auto;
} 
.nature-section{
  margin-top: -20px;
  border-top-left-radius: 24px;
  border-top-right-radius: 24px;
  background: #fff;
  z-index: 1;
  position: relative;
}
@media only screen and (max-width: 1199px){
   .nature-row{
    padding-bottom: 80px;
  }
}
@media only screen and (max-width: 991px){
  .nature-content h2{
    font-size: 34px;
  }
  .nature-row{
    padding-bottom: 60px;
  }
  .nature-content{
    width: 50%;
  }
  .nature-buttons .button{
    padding: 0 15px !important;
  }
}
@media only screen and (max-width: 767px){
  .nature-content{
    width: 100%;
    text-align: center;
  }
  .nature-section{
    paddign: 40px 0;
  }
  .nature-row{
    flex-wrap: wrap;
    justify-content: center;
    gap: 25px;
    padding-bottom: 40px;
  }
  .nature-content h2{
    font-size: 28px;
    margin-bottom: 10px;
  }
  .nature-content p{
    font-size: 16px;
  }
  .nature-buttons .button{
    font-size: 14px;
    min-height: 40px;
  }
  .nature-slide-p{
    padding: 20px;
    font-size: 16px;
  }
}
</style>
<section class="nature-section">
	<div class="page-width">
		<div class="nature-row">
			<div class="nature-content">
				<h2>{{ section.settings.nature_heading_text | newline_to_br }}</h2>
				<p>{{ section.settings.nature_p_content }}</p>
			</div>
          {% if section.settings.button_url != blank  %}
			<div class="nature-buttons">
              <a href="{{ section.settings.button_url }}" class="button">{{ section.settings.button_text }}</a>
            </div>
          {% endif %}
		</div>
	</div>
	<div class="nature-slider-content">
		<div class="nature-slider">
          {% for block in section.blocks %}
			<div class="nature-slide">
              {% if block.settings.slide_image != blank %}
				{{ block.settings.slide_image | image_url: width: 500 | image_tag  }}
				<p class="nature-slide-p">{{ block.settings.slide_text }}</p>
                {% endif %}
			</div>
          {% endfor %}
		</div>
	</div>
</section>

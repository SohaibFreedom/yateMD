{% schema %}
  {
    "name": "Women Nature Section",
    "settings": [
      {
        "type": "textarea",
        "id": "nature_heading_text",
        "label": "Heading Text"
      },
      {
        "type": "textarea",
        "id": "nature_p_content",
        "label": "Content Text"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button Link"
      }
    ],
    "blocks":[
      {
        "type": "slide",
        "name": "Slide",
        "settings":[
          {
            "type": "text",
            "id": "slide_text",
            "label": "Text"
          },
          {
            "type": "image_picker",
            "id": "slide_image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets":[
      {
        "name": "Women Nature Section"
      }
    ]
  }
{% endschema %}